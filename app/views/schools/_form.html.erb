<%= form_for(@school) do |f| %>

  <div class="field">
    <%= f.label :name, "スクール名" %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :company_list, "運営会社名" %><br>
    <%= text_field_tag 'school[company_list]', @school.company_list.join(',') %>
  </div>
  <div class="field">
    <%= f.label :purpose_list, "受講目的（カンマ区切り）" %><br>
    <%= text_field_tag 'school[purpose_list]', @school.purpose_list.join(',') %>
  </div>
    <div class="field">
    <%= f.label :style_list, "受講スタイル（カンマ区切り）" %><br>
    <%= text_field_tag 'school[style_list]', @school.style_list.join(',') %>
  </div>
  <div class="field">
    <%= f.label :status_list, "対応生徒（カンマ区切り）" %><br>
    <%= text_field_tag 'school[status_list]', @school.status_list.join(',') %>
  </div>
    <div class="field">
    <%= f.label :course_list, "コース（カンマ区切り）" %><br>
    <%= text_field_tag 'school[course_list]', @school.course_list.join(',') %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
